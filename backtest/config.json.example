    "initial_cash": 600000,
    "commission": 0.003,
    "max_positions": 10,
    "strategy": "simple"
  },
  "data_provider": {
    "cache_ttl": 31536000,
    "retry_attempts": 3,
    "rate_limit_delay": 0.2
  },
  "pattern_detector": {
    "lookback_days": 20,
    "confidence_threshold": 0.6,
    "simple_market_thresholds": {
      "bull": 0.65,
      "normal": 0.50,
      "volatile": 0.40,
      "bear": 0.10
    }
  },
  "stock_picker": {
    "max_pick": 10,
    "remove_obvious_bad": {
      "close": ">= min_price, <= max_price",
      "circ_mv": ">= min_market_cap, <= max_market_cap",
      "pe": "> 0, < 150",
      "turnover_rate": ">= 0.5",
      "volume_ratio": ">= 0.5"
    },
    "simple_gain_volume_turnover": {
      "bull": {
        "pct_chg": ">= 1.5, <= 9.5",
        "volume_ratio": ">= 1.2, <= 15",
        "turnover_rate": ">= 2.0, <= 30"
      },
      "normal": {
        "pct_chg": ">= 1.0, <= 8.0",
        "volume_ratio": ">= 1.0, <= 12",
        "turnover_rate": ">= 1.5, <= 25"
      },
      "bear": {
        "pct_chg": ">= 0.5, <= 6.0",
        "volume_ratio": ">= 1.0, <= 8",
        "turnover_rate": ">= 1.0, <= 15"
      },
      "volatile": {
        "pct_chg": ">= 0.3, <= 5.0",
